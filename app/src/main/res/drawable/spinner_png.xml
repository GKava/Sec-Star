<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:pivotX="50%"
    android:pivotY="50%" >

    <shape
        android:innerRadiusRatio="4"
        android:shape="ring"
        android:thicknessRatio="14.333"
        android:useLevel="false" >
        <size
            android:height="19dip"
            android:width="19dip" />

        <gradient
            android:startColor="#0DEAF5FB"
            android:centerColor="#73BBE2"
            android:endColor="#2491CC"
            android:centerY="0.50"
            android:gradientRadius="20dp"
            android:type="sweep"
            android:useLevel="true" />
    </shape>

</rotate>